<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../../../partials/head %>
</head>

<body class="fixed-nav sticky-footer bg-dark" id="page-top">

    <header>
        <% include ../../../partials/header %>
    </header>

    <div class="content-wrapper">
        <div class="container-fluid">
            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/bot-growth/intents">Intents</a>
                </li>
                <li class="breadcrumb-item active">
                    <%= iName%>
                </li>
            </ol>
            <div class="row">
                <div class="col-12">
                    <h1>Blank</h1>
                    <p>This is an example of a blank page that you can use as a starting point for creating new ones.</p>
                    <form action="../../api/intent/<%= id %>" method="put">
                        <div class="">
                            <div class="form-group">
                                <label for="intent-name"><%=name%></label>
                                <input type="text" class="form-control" name="name" placeholder="Name" value="<%=name%>">
                            </div>

                            <div class="form-group">
                                <label for="intent-description"><%=Department%></label>
                                <select class="form-control" name="department" value="<%=department%>">
                                    <option>Global</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="intent-trigger">Question</label>
                                <input type="text" class="form-control" name="question" placeholder="<%=question%>" value="<%=question%>">
                            </div>
                            <div class="form-group">
                                <label for="intent-answer">Answer</label>
                                <input type="text" class="form-control" name="answer" placeholder="<%=answer%>" value="<%=answer%>">
                            </div>
                            <div class="form-group">
                                <input type="hidden" class="form-control" name="status" value="<%=status%>">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Save changes</button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- /.container-fluid-->
        <!-- /.content-wrapper-->

        <% include ../../../partials/footer %>


</body>

</html>