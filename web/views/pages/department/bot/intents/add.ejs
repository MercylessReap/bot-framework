<form id="newIntent" action="/department/intents/" method="post">
    <div class="modal-header">
        <h5 class="modal-title">Add Intent</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label for="intent-name">Name</label>
            <input type="text" class="form-control" name="name" placeholder="Name">
        </div>

        <div class="form-group">
            <label for="intent-description">Department</label>
            <select class="form-control" name="department">
            <% let x=y=0;if(x==y){for(let ii=0; ii<departments.length; ii++){%>
                <option value="<%=departments[ii]._id%>"><%=departments[ii].friendlyName%></option>
            <%}}else{%>
                <option value="<%=departments[0]._id%>"><%=departments[0].friendlyName%></option>
            <%}%>
            </select>
        </div>
      
        <div class="form-group">
            <label for="intent-answer">Answer</label>
            <input type="text" class="form-control" name="answer" placeholder="Answers">
        </div>
        <div class="form-group">
            <input type="hidden" class="form-control" name="status" value="false">
        </div>
    </div>
    <div class="modal-footer">
        <input id="postIntent" type="submit" value="save" class="btn btn-primary">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    </div>
</form>
<script>
    function postIntent(){
        var postIntent = document.getElementById('newIntent');
        alert('button clicked')
        postIntent.submit();
    }
</script>