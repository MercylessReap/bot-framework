<form id="newIntent" action="/department/intents/" method="post">
    <div class="modal-header">
        <h5 class="modal-title">Add Intent</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label for="intent-name">Name</label>
            <input type="text" class="form-control" name="name" placeholder="Name">
        </div>

        <div class="form-group">
            <label for="intent-description">Department</label>
            <select class="form-control" name="department">
            <%  for(let i=0; i<departments.length; i++){
                    if(user.department == departments[i]._id){%>
                <option selected value="<%=departments[i]._id%>"><%=departments[i].friendlyName%></option>
            <% }else if(perm.wizard==true){%>
                <option value="<%=departments[i]._id%>"><%=departments[i].friendlyName%></option>
            <%}}%>
            </select>
        </div>
      
        <div class="form-group">
            <label for="intent-answer">Answer</label>
            <input type="text" class="form-control" name="answer" placeholder="Answers">
        </div>
        <div class="form-group">
            <input type="hidden" class="form-control" name="status" value="false">
        </div>
    </div>
    <div class="modal-footer">
        <input id="postIntent" type="submit" value="save" class="btn btn-primary">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
    </div>
</form>
<script>
    function postIntent(){
        var postIntent = document.getElementById('newIntent');
        alert('button clicked')
        postIntent.submit();
    }
</script>